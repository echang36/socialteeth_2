<p id="notice"><%= notice %></p>

<p>
  <b>Name:</b>
  <%= @user.name %>
</p>

<p>
  <b>Email:</b>
  <%= @user.email %>
</p>

<p>
	<b> Owned Ads: </b>
	<ul>
	<% @owned_ads.each do |a| %>   
		<li><%= a.title%></li>
	<% end %>
	</ul>
</p>

<p>
	<b> Contributions: </b>
	<ul>
	<% @contributions.each do |a| %>   
		<li><%=a.ad.title%>: <%=a.amount %></li>
	<% end %>
	</ul>
</p>

<%= link_to 'Edit', edit_user_path(@user) %> |
